<!DOCTYPE html>

@using EquipmentManagementSystem.Data
@inject Localizer Localizer

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/site.css" rel="stylesheet" type="text/css" />
    <link href="~/css/Table.css" rel="stylesheet" type="text/css" />
    <link href="~/css/jquery-ui.css" rel="stylesheet" type="text/css" />

    <script src="~/js/jquery.js" type="text/javascript"></script>
    <script src="~/js/jquery.unobtrusive-ajax.js"></script>
    <script src="~/js/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/js/jquery.validate.js"></script>
    <script src="~/js/jquery.validate.unobtrusive.js"></script>
    <script src="~/js/jquery-ui.js" type="text/javascript"></script>
    <script src="~/js/Index-Table.js" type="text/javascript"></script>
    <script type="text/javascript">

        // Prevents doubleclicking from selecting text in table
        $('document').ready(function () {

            var table = document.getElementById('table');
            table.addEventListener('mousedown', function (event) {
                if (event.detail > 1) {
                    event.preventDefault();
                }
            }, false);
        });

        var handler = function () {

            var dialog = document.getElementById('#exportDialog');
            $.getScript("/js/ConfirmationDialogue.js", function () {
                ConfirmClickGeneric(Export, dialog);
            });
        };

        function Export() {

            var element = document.getElementById('exportSelect');
            var exportTypeVal = element.options[element.selectedIndex].text;

            $.post("@Url.Action("Export")", {exportType: exportTypeVal});
        };

        var languageClick = function (event) {

            alert(event.textContent);
            var str = "@Url.Action("Index", "Home", new { culture ="_language_"})"
                .replace("_language_", encodeURIComponent(event.textContent));

            window.location = str;
        };

    </script>
</head>
<body>
    <header class="HeaderStyle">
        <nav>
            <li>
                @Html.ActionLink(Localizer["Equipment"], "Index", "Home")
                @Html.ActionLink(Localizer["Owner"], "Index", "Owner")
                <a href="#" onclick="handler()" id="exportButton">Export</a>

            </li>

        </nav>
        <div style="float:right; padding-top:12px; display:inline-flex">
            <button onclick="languageClick(this)" style="width:35px; height:25px;">en-GB</button>
            <text style="font-size:25px; color:white; padding:0px 5px 0px 5px">/</text>
            <button onclick="languageClick(this)" style="width:35px; height:25px;">sv-SE</button>
        </div>
    </header>

    <div class="body-content">
        @RenderBody()
    </div>

    <div id="exportDialog" class="Dialog" title="" hidden>
        <select id="exportSelect" style="position:relative">
            <option value="0" selected>Excel</option>
            <option value="1">JSON</option>
        </select>
        <p style="position:relative">@Localizer["Are you sure you wish to Export?"]</p>
    </div>

    @RenderSection("Scripts", false/*required*/)
</body>
</html>
